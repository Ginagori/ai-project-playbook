# AI Project Playbook Agent Configuration
# Copy this file to .env and fill in your values

# ============================================
# Supabase (Database + Auth + RAG)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# ============================================
# Team Configuration (REQUIRED for shared learning)
# ============================================
# Get your team ID from Supabase after running schema.sql
# Run: SELECT id FROM teams WHERE name = 'Nivanta AI';
PLAYBOOK_TEAM_ID=your-team-uuid

# ============================================
# Anthropic API (for Claude)
# ============================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================
# User Configuration
# ============================================
PLAYBOOK_USER=natal
PLAYBOOK_TEAM=nivanta

# ============================================
# API Configuration (for cloud deployment)
# ============================================
PLAYBOOK_API_URL=http://localhost:8000

# ============================================
# Development
# ============================================
DEBUG=false
LOG_LEVEL=INFO
