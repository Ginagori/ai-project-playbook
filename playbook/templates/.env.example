# ============================================
# ENVIRONMENT VARIABLES - TEMPLATE
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================

# --------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------

# Environment (development, staging, production)
NODE_ENV=development

# Application URL (used for CORS, redirects, etc.)
APP_URL=http://localhost:3000

# API Base URL (if separate from frontend)
API_URL=http://localhost:8000

# Port configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000

# --------------------------------------------
# DATABASE
# --------------------------------------------

# Primary Database URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database_name]
# Example: postgresql://postgres:mypassword@localhost:5432/mydb
DATABASE_URL=

# Database Connection Pool Settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# Supabase (if using Supabase as database)
# Get these from: https://supabase.com/dashboard/project/<project-id>/settings/api
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# --------------------------------------------
# AUTHENTICATION & SECURITY
# --------------------------------------------

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# JWT Expiration (e.g., 7d, 24h, 60m)
JWT_EXPIRATION=7d

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# CORS Allowed Origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# --------------------------------------------
# LLM / AI SERVICES
# --------------------------------------------

# OpenAI
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Claude)
# Get your key: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenRouter (multi-LLM provider)
# Get your key: https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# --------------------------------------------
# VECTOR DATABASE / EMBEDDINGS
# --------------------------------------------

# Pinecone
# Get your key: https://app.pinecone.io/
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=

# OpenAI Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Qdrant (alternative vector DB)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=

# --------------------------------------------
# EXTERNAL APIS
# --------------------------------------------

# Stripe (payments)
# Get your keys: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid (email)
# Get your key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Resend (alternative email)
# Get your key: https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_EMAIL=

# Twilio (SMS)
# Get your credentials: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS S3 (file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary (image hosting)
# Get your credentials: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google Cloud (if using GCP services)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# --------------------------------------------
# MONITORING & ANALYTICS
# --------------------------------------------

# Sentry (error tracking)
# Get your DSN: https://sentry.io/settings/projects/<project>/keys/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# PostHog (product analytics)
# Get your key: https://app.posthog.com/project/settings
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Google Analytics
GA_MEASUREMENT_ID=

# --------------------------------------------
# SEARCH & WEB SCRAPING
# --------------------------------------------

# Brave Search API
# Get your key: https://api.search.brave.com/app/keys
BRAVE_API_KEY=

# SearXNG (self-hosted search)
SEARXNG_BASE_URL=http://localhost:8081

# Firecrawl (web scraping)
# Get your key: https://firecrawl.dev/
FIRECRAWL_API_KEY=

# --------------------------------------------
# DEVELOPMENT TOOLS
# --------------------------------------------

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Database migrations auto-run
AUTO_MIGRATE=false

# Seed database on start
SEED_DATABASE=false

# --------------------------------------------
# REDIS / CACHING (optional)
# --------------------------------------------

# Redis URL
# Format: redis://[user]:[password]@[host]:[port]/[db]
REDIS_URL=redis://localhost:6379

# Cache TTL (in seconds)
CACHE_TTL=3600

# --------------------------------------------
# RATE LIMITING (optional)
# --------------------------------------------

# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# --------------------------------------------
# WEBHOOKS (optional)
# --------------------------------------------

# Webhook secret for verifying incoming webhooks
WEBHOOK_SECRET=

# --------------------------------------------
# FEATURE FLAGS (optional)
# --------------------------------------------

# Enable experimental features
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# SECURITY NOTES:
# ============================================
# 1. NEVER commit this file with real values
# 2. Use different values for dev/staging/prod
# 3. Rotate secrets regularly (every 90 days)
# 4. Use secret management tools in production:
#    - AWS Secrets Manager
#    - Google Secret Manager
#    - HashiCorp Vault
#    - Doppler
# 5. Restrict access to .env files (chmod 600)
# ============================================
